@model IEnumerable<WebProject.Models.User>

@{
    ViewData["Title"] = "Search";
}

<h1 class="text-[40px] mb-[15px]">Search User</h1>


<div>
    <div>
        <form asp-action="Search" asp-controller="Users">
            <input name="search" text class=" border-1 py-[10px] rounded-[10px] px-[10px] w-[500px]" />
            <input type="submit" value="Search" class="bg-black text-white px-[20px] py-[5px] rounded-[5px] text-[20px] mt-[20px] block" />
        </form>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Username)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Age)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if ( Model is not null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Username)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Age)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

